<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/recyclerLayout_chat_message_linearLayout_received"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/recyclerLayout_chat_message_image_received"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="start"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/avatar_placeholder" />

        <com.google.android.material.chip.Chip
            android:id="@+id/recyclerLayout_chat_message_chip_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Message Placeholder" />

        <TextView
            android:id="@+id/recyclerLayout_chat_message_date_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="time"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:translationY="-6dp"
            android:visibility="invisible"
            tools:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recyclerLayout_chat_message_linearLayout_sent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/recyclerLayout_chat_message_image_sent"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="end"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/avatar_placeholder" />

        <com.google.android.material.chip.Chip
            android:id="@+id/recyclerLayout_chat_message_chip_sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:clickable="false"
            android:text="Message Placeholder"
            android:textColor="@color/white"
            app:chipBackgroundColor="@color/dark_button" />

        <TextView
            android:id="@+id/recyclerLayout_chat_message_date_sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="8dp"
            android:text="time"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:translationY="-6dp"
            android:visibility="invisible"
            tools:visibility="visible" />
    </LinearLayout>
</LinearLayout>